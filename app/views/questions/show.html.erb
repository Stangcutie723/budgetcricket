<div id ="FAQshow">

  <div id ="FAQshowtop">
    <h2><%= @question.question %></h2>
  </div>

  <div class="TopLinks">
    | <%= link_to "Logout", destroy_user_session_path %>  |
    <%= link_to "Wallet", controller: "budgets" %> |
    <%= link_to "Home", controller: "home" %> |
    <%= link_to "Cricket's Stories", controller: "stories"  %> |
  </div>

  <%= title(@question.question, "Questions") %>
  <%= link_to "Edit Question", edit_question_path(@question) %>
  <%= link_to "Delete Question", question_path(@question), :method => :delete, :confirm => "Yo, you sure you wanna delete this question?" %>
<br>

  <ul id='answer'>
    <% @question.answers.each do |answer| %>
    <li>
      <%= link_to answer.answer, [@question, answer] %>
    </li>
    <% end %>
  </ul>

  <%= link_to "New Answer", new_question_answer_path(@question) %>
  <%= link_to "Back to List of Questions", questions_path %>

  <div class="BottomLinks">
    | <%= link_to "FAQs", controller: "questions" %> |
    <%= link_to "About Budget", controller: "aboutbudget" %> |
    <%= link_to "Contact Us", controller: "contactus" %> |
    <%= link_to "About Us", controller: "aboutus" %> |
  </div>
</div>
